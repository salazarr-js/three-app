        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "keywords": [
    "three",
    "three.js",
    "javascript",
    "typescript",
    "3d",
    "webgl",
    "webgl2",
    "webgpu",
    "canvas",
    "svg"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "tsc": "tsc",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/three": "^0.168.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "three": "^0.168.0"
  }
